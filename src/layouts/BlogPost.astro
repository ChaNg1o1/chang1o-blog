---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

// Extract props from either direct props (collections) or frontmatter (markdown layout)
const props = Astro.props.frontmatter || Astro.props;
const { title, description, heroImage } = props;

// Ensure dates are Date objects
const pubDate = props.pubDate ? new Date(props.pubDate) : new Date();
const updatedDate = props.updatedDate ? new Date(props.updatedDate) : undefined;

// Resolve hero image path for subpath deployment
const heroImageSource = typeof heroImage === 'string' && heroImage.startsWith('/')
	? import.meta.env.BASE_URL.replace(/\/$/, '') + heroImage
	: heroImage;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em;
				color: rgb(var(--gray-dark));
				line-height: 2;
			}
			/* 内容区域样式 - 不包括 .title */
			.prose > p {
				margin-bottom: 2em;
			}
			.prose > h1,
			.prose > h2,
			.prose > h3,
			.prose > h4,
			.prose > h5,
			.prose > h6 {
				margin-top: 2.5em;
				margin-bottom: 1.25em;
				line-height: 1.3;
			}
			.prose > h2 {
				font-size: 1.75em;
			}
			.prose > h3 {
				font-size: 1.5em;
			}
			.prose > ul,
			.prose > ol {
				margin-bottom: 2em;
				padding-left: 2em;
			}
			.prose li {
				margin-bottom: 0.5em;
			}
			.prose pre {
				margin: 1.5em 0;
				padding: 1.25em;
				overflow-x: auto;
			}
			.prose code {
				font-size: 0.9em;
			}
			.prose > blockquote {
				margin: 1.5em 0;
				padding-left: 1.5em;
				border-left: 4px solid var(--accent);
				font-style: italic;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body class="bg-white dark:bg-black text-black dark:text-white">
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImageSource && <Image width={1020} height={510} src={heroImageSource} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
